<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_basedialogfragmenttest_label_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/activity_basedialogfragmenttest_button_fail"
        android:layout_marginBottom="10dp"
        android:textColor="#000"
        android:text="BaseDialogFragmentTestActivity" />

    <Button
        android:id="@+id/activity_basedialogfragmenttest_button_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Force Finish Test" />

</RelativeLayout>